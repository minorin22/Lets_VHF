<div class="grayout">
  <%= link_to "", "/",class:"to_top" %>
  <div class="mordal login_mordal">
    <%= link_to(image_tag("x_btn.svg"), "/", class:"x-btn") %>
    <div class="items">
      <%= form_tag("/login") do %>
        <div class="item">
          <p>ユーザーID <% if @error_message %><span>*</span><% end %></p>
          <input name="name" value="<%= @name %>" autofocus>
        </div>
        <div class="item">
          <p>Password <% if @error_message %><span>*</span><% end %></p>
          <input name="password" type="password">
        </div>
        <div class="item">
          <% if @error_message %>
          <p><span><%= @error_message %></span></p>
          <% end %>
        </div>
        <input type="submit" value="ログイン" class="btn log-in">
      <% end %>
    </div>

  </div>

</div>
