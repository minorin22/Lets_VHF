<% case @station.state %>
<% when 1 %>
  $(".menu_class").hide();
  $(".sub_screen").hide();
  $(".menu_screen").hide();
  $(".home_screen").show();

  $(".distress_info").text('　');
  $(".distress_info").removeClass("reverse_color");
  $(".dsc_infos").html('<img class="dsc_info ch70_info" id="ch70_symbol" src="/assets/ch70-symbol.svg"><img class="dsc_info" id="atm_ans" src="/assets/atm-ans.svg"><img class="dsc_info" id="ch_sw" src="/assets/ch_sw.svg">');
  $("#alm-lamp").removeClass("red_lamp");
  <% if @station.channel >= 10 %>
    $(".current_ch").text("<%= @station.channel %>");
  <% else %>
    $(".current_ch").text("<%= "0#{@station.channel}" %>");
  <% end %>

  var touched = false;
  var touch_time = 0;
  $("#distress").off();
  $("#distress").bind({
    'touchstart mousedown': function(e) {
      touched = true;
      touch_time = 0;
      document.interval = setInterval(function(){
        touch_time += 100;
        if (touch_time == 200) {
          $(".home_screen").hide();
          $(".menu_screen").show();
          $(".main_menu").hide();
          $(".menu_class").hide();
          $(".distress_call").show();
          $("#distress_count_down").show();
          $(".current_ch").text('70');
          $(".count_num").text("4");
          $("#alm-lamp").addClass("red_lamp");
        }
        if (touch_time == 700) {
          $("#alm-lamp").removeClass("red_lamp");
        }
        if (touch_time == 1200) {
          $(".count_num").text("3");
          $("#alm-lamp").addClass("red_lamp");
        }
        if (touch_time == 1700) {
          $("#alm-lamp").removeClass("red_lamp");
        }
        if (touch_time == 2200) {
          $(".count_num").text("2");
          $("#alm-lamp").addClass("red_lamp");
        }
        if (touch_time == 2700) {
          $("#alm-lamp").removeClass("red_lamp");
        }
        if (touch_time == 3200) {
          $(".count_num").text("1");
          $("#alm-lamp").addClass("red_lamp");
        }
        if (touch_time == 3700) {
          $("#alm-lamp").removeClass("red_lamp");
        }
        if (touch_time == 4200) {
          $("#distress_count_down").hide();
          $("#sending_distress").show();
          $(".tx").show().css("display","inline-block");
          $("#alm-lamp").addClass("red_lamp");
          $.ajax({
            url: '/dscs/distress_call',
            type: 'POST',
            data: {'nature': 'Undesignated'},
            cache: false
          });
        }
      }, 100)
      e.preventDefault();
    },
    'touchend mouseup mouseout': function(e) { // マウスが領域外に出たかどうかも拾うと、より自然
      $("#distress_count_down").hide();
      $.post(`/stations/${gon.station_id}/distress_call`);
      if (touch_time < 4200) {
        $("#alm-lamp").removeClass("red_lamp");
      }
      if (touched) {
        if (touch_time < 200 ) {
          // 短いタップでの処理
        }
      }
      touched = false;
      clearInterval(document.interval);
      e.preventDefault();
    }
  });
<% else %>
<% end %>
