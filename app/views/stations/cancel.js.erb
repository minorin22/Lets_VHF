<% case @station.state %>
<% when 1 %>
  $(".menu_class").hide();
  $(".sub_screen").hide();
  $(".menu_screen").hide();
  $(".home_screen").show();
  $("#btn_0").click(function(){
    $(".home_screen").show();
    $(".menu_class").hide();
    $(".menu_screen").hide();
    $(".main_menu").hide();
  });
  <% if @station.channel > 10 %>
    $(".current_ch").text("<%= @station.channel %>");
  <% else %>
    $(".current_ch").text("<%= "0#{@station.channel}" %>");
  <% end %>
<% else %>
<% end %>
