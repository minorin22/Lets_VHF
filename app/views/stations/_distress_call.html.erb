<p>2.3) Distress call</p>
<form action="/dscs/distress_call" method="POST" id="distress_form">
  <div class="selects">
    <ul>
      <li><a class="link" tabindex="0"  id="nature_2_3">Nature</a><p class="colon">:</p><p  class="inputs">[</p><input type="text" id="input_2_3_1" class="input input_l" name="nature"   value="Undesignated"><p class="inputs2">]</p></li>
      <li><a class="link" tabindex="0">Position</a><p class="colon">:</p><p class="inputs inputs_l">[
        <% if @station.lat >= 0 %>
          <%= "N" %>
        <% else %>
          <%= "S" %>
        <% end %>
        <% if @station.long >= 0 %>
          <%= "E" %>
        <% else %>
          <%= "W" %>
        <% end %>
          ]</p></li>
      <li><a class="link">&nbsp;</a><p class="colon">&nbsp;</p><p class="inputs">[
        <%= "#{@lat_degree}°#{@lat_min}' " %>
        <% if @station.lat >= 0 %>
          <%= "N" %>
        <% else %>
          <%= "S" %>
        <% end %>
        ]</p></li>
      <li><a class="link">&nbsp;</a><p class="colon">&nbsp;</p><p class="inputs">[
      <%= "#{@long_degree}°#{@long_min}' " %>
        <% if @station.long >= 0 %>
          <%= "E" %>
        <% else %>
          <%= "W" %>
        <% end %>
      ]</p></li>
    </ul>
    <div class="ok_cancel">
      <p>Press DISTRESS to send.</p>
      <a class="link link_cancel" id="cancel_2_3" tabindex="0">[Cancel]</a>
    </div>
  </div>
</form>
<script>
var touched = false;
var touch_time = 0;
$("#distress").off();
$("#distress").bind({
  'touchstart mousedown': function(e) {
    touched = true;
    touch_time = 0;
    document.interval = setInterval(function(){
      touch_time += 100;
      if (touch_time == 200) {
        $("#distress_count_down").show();
        $(".count_num").text("4");
      }
      if (touch_time == 1200) {
        $(".count_num").text("3");
      }
      if (touch_time == 2200) {
        $(".count_num").text("2");
      }
      if (touch_time == 3200) {
        $(".count_num").text("1");
      }
      if (touch_time == 4200) {
        $("#distress_count_down").hide();
        $("#sending_distress").show();
        $.ajax({
          url: '/dscs/distress_call',
          type: 'POST',
          data: {'nature': $("#input_2_3_1").val()},
          cache: false
        });
      }
    }, 100)
    e.preventDefault();
  },
  'touchend mouseup mouseout': function(e) { // マウスが領域外に出たかどうかも拾うと、より自然
    $("#distress_count_down").hide();
    if (touched) {
      if (touch_time < 200 ) {
        // 短いタップでの処理
      }
    }
    touched = false;
    clearInterval(document.interval);
    e.preventDefault();
  }
});
</script>
