<!DOCTYPE html>
<html>
  <head>
    <title>LetsVhf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if session[:user_id] %>
          <%= link_to "LET'S VHF !", "/users/#{@current_user.id}" %>
        <% else %>
          <%= link_to "LET'S VHF !", "/" %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if session[:user_id] %>
          <li><%= link_to "シナリオモード", "/about" %></li>
          <li><%= link_to "シミュレーターモード", "/about" %></li>
          <li><%= link_to "ログアウト", "/logout" ,method: :post %></li>
        <% else %>
          <li><%= link_to "LET'S VHF ! とは", "/about" %></li>
          <li><%= link_to "新規登録", "/signup" %></li>
          <li><%= link_to "ログイン", "/login" %></li>
        <% end %>
      </ul>
    </header>

    <%= yield %>
  </body>
</html>
