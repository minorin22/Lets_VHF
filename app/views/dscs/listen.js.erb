var touched = false;
var touch_time = 0;
$("#distress").off();
$("#distress").bind({
  'touchstart mousedown': function(e) {
    touched = true;
    touch_time = 0;
    document.interval = setInterval(function(){
      touch_time += 100;
      if (touch_time == 200) {
        $(".home_screen").hide();
        $(".menu_screen").show();
        $(".main_menu").hide();
        $(".menu_class").hide();
        $(".distress_call").show();
        $("#distress_count_down").show();
        $(".current_ch").text('70');
        $(".count_num").text("4");
      }
      if (touch_time == 1200) {
        $(".count_num").text("3");
      }
      if (touch_time == 2200) {
        $(".count_num").text("2");
      }
      if (touch_time == 3200) {
        $(".count_num").text("1");
      }
      if (touch_time == 4200) {
        $("#distress_count_down").hide();
        $("#sending_distress").show();
        $(".tx").show().css("display","inline-block");
        $.ajax({
          url: '/dscs/distress_call',
          type: 'POST',
          data: {'nature': 'Undesignated'},
          cache: false
        });
      }
    }, 100)
    e.preventDefault();
  },
  'touchend mouseup mouseout': function(e) { // マウスが領域外に出たかどうかも拾うと、より自然
    $("#distress_count_down").hide();
    $.post(`/stations/${gon.station_id}/distress_call`);
    if (touched) {
      if (touch_time < 200 ) {
        // 短いタップでの処理
      }
    }
    touched = false;
    clearInterval(document.interval);
    e.preventDefault();
  }
});

<% if @current_station.channel >= 10 %>
  $(".current_ch").text("<%= @current_station.channel %>");
<% else %>
  $(".current_ch").text("<%= "0#{@current_station.channel}" %>");
<% end %>
