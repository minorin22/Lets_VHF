

$(document).on('turbolinks:load', function(){

  $("#off_hook_click").click(function(){
    $("#off_hook").hide();
    $("#on_hook").fadeIn();
  });

  $("#on_hook_click").click(function(){
    $("#on_hook").hide();
    $("#off_hook").fadeIn();
  });

  $("#cover_close").click(function(){
    $("#cover_close").fadeOut();
    $("#cover_open").fadeIn();
  });
  $("#cover_open").click(function(){
    $("#cover_open").fadeOut();
    $("#cover_close").fadeIn();
  });

  $("#ptt_btn").mousedown(function(){
    $("#tx").show().css("display","inline-block");
  });
  $("#ptt_btn").mouseup(function(){
    $("#tx").hide();
  });

  jQuery.extend({
		clock : function clock(target){
				var now  = new Date();
				var hour = now.getUTCHours();
				var min = now.getUTCMinutes();
				if(hour < 10) {
					hour = "0" + hour;
				}
				if(min < 10) {
					min = "0" + min;
				}
				var time_str = hour + ":" + min + " (UTC)";
				target.text(time_str);
				setTimeout(function(){
					clock(target)
				},1000);
			}
	});
	jQuery.clock(jQuery("#clock"));


  $(".flash").click(function(){
    $(".flash").hide();
  });

});
